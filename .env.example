# Configuración de Base de Datos
# Opciones: 'sqlite' o 'supabase'
DB_TYPE=sqlite

# Para SQLite (desarrollo local)
DATABASE_URL=./database/permisos_admin.db

# Para Supabase (producción)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# JWT
JWT_SECRET=tu_clave_secreta_muy_segura_aqui_cambiala_en_produccion

# Email (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu-email@gmail.com
SMTP_PASS=tu-contraseña-de-aplicacion

# Entorno
NODE_ENV=development
PORT=3001

# Configuración de seguridad para Supabase
# Estos valores se configuran automáticamente en las RLS policies
APP_USER_RUT=
APP_USER_ROLE=